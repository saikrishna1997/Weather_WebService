		</scheduler>
		<db:select doc:name="Select the Data from Database" doc:id="80781c2a-2204-48b6-9cd8-256af449fa8b" config-ref="Database_Config4">
			<db:sql >select location,latitude,longitude,temperature,date,time from location;</db:sql>
		</db:select>
		<ee:transform doc:name="Transform Message" doc:id="465e1f1e-862e-46fb-80f2-3b83d5cf083b" >
			<ee:message >
				<ee:set-payload ><![CDATA[%dw 2.0
output application/xlsx
---
{
	location: payload map ( payload01 , indexOfPayload01 ) -> {
		location: payload01.location,
		latitude: payload01.latitude,
		longitude: payload01.longitude,
		temperature: payload01.temperature,
		date: payload01.date,
		time: payload01.time
	}
}]]></ee:set-payload>
			</ee:message>
		</ee:transform>
		<file:write doc:id="8449878b-3fee-4e04-9b3c-dfda0a976f04" config-ref="File_Config" path="C:\Users\Saikrishna\Desktop\location.xlsx" doc:name="Write the Data in File"/>
		<logger level="INFO" doc:name="Logger" doc:id="dfa9c816-5ddc-4649-9eca-999642288f1a" message="Successfully Added!!!"/>
	</flow>
