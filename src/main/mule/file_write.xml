	<file:config name="File_Config" doc:name="File Config" doc:id="1934b265-0d97-4726-bacd-e51f52bc683b" >
		<file:connection workingDir="C:\Users\Saikrishna\Desktop\Use Cases" />
	</file:config>
	<flow name="file_writeFlow" doc:id="e9c96e44-1474-4677-be92-213a84756837" >
		<scheduler doc:name="Scheduler" doc:id="5d1d48b9-be4c-4676-897c-38d3b612c259" >
			<scheduling-strategy >
				<cron expression="0 45 10 08 * ?" timeZone="Asia/Kolkata"/>
